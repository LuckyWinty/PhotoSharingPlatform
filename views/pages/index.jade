extends ../layout

block append style
    link(rel='stylesheet',href='/stylesheets/picture.css')
    link(rel='stylesheet',href='/stylesheets/index.css')

block content
    mixin box(picture)
        if picture.length == 1
            #picPanel
                each pic in picture
                    img#big(src='/image?imageId=' + pic)
        else
            #picsPanel
                each pic,item in picture
                    if item == 0
                        img(src='/image?imageId=' + pic)

                #row
                    each pic,item in picture
                        if item>=1
                            img(src='/image?imageId=' + pic)

    .searchBlock
        if isIndex == false
            if isActive == 1
                a#btn-all.searchBtn.active(href="javascript:;") 全部
            else 
                a#btn-all.searchBtn(href="/hotIndex") 全部
            if isActive == 2
                a#btn-lastest.searchBtn.active(href="javascript:;") 最近一周
            else 
                a#btn-lastest.searchBtn(href="/hotIndex/weekPage") 最近一周
            if isActive == 3
                a#btn-today.searchBtn.active(href="javascript:;") 今天
            else 
                a#btn-today.searchBtn(href="/hotIndex/todayPage") 今天
        .searchBox

            form(method='post' action='/search')
                input#search.form-control(placeholder="搜索" name="searchWords")
                input#subBtn(type='submit' value='搜索')
                img#searchIcon(src="/img/search.svg")
    .picContainer
        .picBoxes
            if shares
            each list in shares
                if list.images.length == 1
                    a#box(href='/share?shareId=#{list._id}')
                        +box(list.images)
                        #comment= list.content
                else
                    a#boxes(href='/share?shareId=#{list._id}')
                        +box(list.images)
                        #comment= list.content
